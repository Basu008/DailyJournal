<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:elevation="10dp"
        android:background="@color/centerColor"
        android:alpha="0.6"
        >

        <TextView
            android:id="@+id/journalUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Basu"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="17sp"
            android:padding="5dp"
            android:gravity="start"
            />

        <ImageView
            android:id="@+id/journalShare"
            android:src="@android:drawable/ic_menu_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/journalImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/placeholder" />

        <TextView
            android:id="@+id/journalTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Title"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/journalDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Describe the journal"
            android:textSize="16sp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp" />

        <TextView
            android:id="@+id/journalTimeStamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Creation time"
            android:textSize="12sp"
            android:textStyle="italic"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>